<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="@dimen/activity_padding"
    tools:context="com.concordia.alleviate.activities.MainActivity"
    tools:deviceIds="wear">

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/home_progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:gaugePointSize="0"
        app:gaugePointStartColor="@color/turquoise"
        app:gaugePointEndColor="@color/turquoise"
        app:gaugeStrokeColor="@color/faded_turquoise"
        app:gaugeStrokeWidth="10dp"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStartAngle="90"
        app:gaugeStartValue="0"
        app:gaugeEndValue="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/home_stress_level_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/home_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_alleviated_layout"
        app:layout_constraintBottom_toTopOf="@id/home_buttons_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/home_stress_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/stress_level_units" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="@string/stress_level_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_alleviated_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/home_progress_bar"
        app:layout_constraintStart_toEndOf="@id/home_stress_level_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_buttons_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/home_alleviated_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/alleviated_units" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="@string/alleviated_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal|bottom"
        app:layout_constraintTop_toBottomOf="@id/home_stress_level_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/home_vitals_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:src="@drawable/ic_baseline_pulse_24"
            android:tint="@color/yellow_orange"
            android:backgroundTint="@color/yellow_orange"
            android:background="@drawable/ic_button_background"/>
        <ImageButton
            android:id="@+id/home_alleviate_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_baseline_spa_24"
            android:tint="@color/turquoise"
            android:backgroundTint="@color/turquoise"
            android:background="@drawable/ic_button_background"/>
        <ImageButton
            android:id="@+id/home_relief_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:src="@drawable/ic_baseline_self_improvement_24"
            android:tint="@color/fiery_rose"
            android:backgroundTint="@color/fiery_rose"
            android:background="@drawable/ic_button_background"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>